# ConvoCanvas Configuration Template
# Copy this file to convocanvas-config.env and update the paths for your system

# Core Directories - Update these paths for your system
CONVOCANVAS_ROOT="/path/to/your/convocanvas"
CONVOCANVAS_OBSIDIAN_VAULT="${CONVOCANVAS_ROOT}/obsidian-vault"
CONVOCANVAS_FOUNDATION="/path/to/your/ConvoCanvas-Foundation"
CONVOCANVAS_MAIN_VAULT="/path/to/your/obsidian-vault"

# Backend Configuration
CONVOCANVAS_BACKEND="${CONVOCANVAS_ROOT}/backend"
CONVOCANVAS_FRONTEND="${CONVOCANVAS_ROOT}/frontend"
CONVOCANVAS_DATA="${CONVOCANVAS_ROOT}/data"

# Automation Paths
CONVOCANVAS_AUTOMATION="${CONVOCANVAS_ROOT}/automation"
CONVOCANVAS_SCRIPTS="${CONVOCANVAS_FOUNDATION}"
CONVOCANVAS_LOGS="${CONVOCANVAS_MAIN_VAULT}/System/Logs"

# API Configuration
CONVOCANVAS_API_HOST="localhost"
CONVOCANVAS_API_PORT="8000"
CONVOCANVAS_API_BASE_URL="http://${CONVOCANVAS_API_HOST}:${CONVOCANVAS_API_PORT}"

# Obsidian Integration - Replace with your actual API key
OBSIDIAN_API_KEY="your_obsidian_api_key_here"
OBSIDIAN_HOST="https://127.0.0.1"
OBSIDIAN_PORT="27124"
OBSIDIAN_VAULT_PATH="${CONVOCANVAS_MAIN_VAULT}"